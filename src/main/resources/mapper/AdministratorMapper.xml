<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.unknownclinic.appointment.mapper.AdministratorMapper">
    
    <resultMap id="AdministratorResultMap" type="com.unknownclinic.appointment.domain.Administrator">
        <id property="adminId" column="admin_id"/>
        <result property="adminLoginId" column="admin_login_id"/>
        <result property="password" column="password"/>
        <result property="name" column="name"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findByAdminLoginId" resultMap="AdministratorResultMap">
        SELECT * FROM administrators WHERE admin_login_id = #{adminLoginId}
    </select>
</mapper>
